<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/_switch"
            android:layout_gravity="center"
            android:layout_alignLeft="@+id/label" android:layout_alignTop="@+id/label"
            android:layout_alignRight="@+id/label" android:layout_alignBottom="@+id/label"
            android:background="@color/Comments.Levels.15" android:alpha="0.5"/>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/label"
                  android:layout_gravity="left|center_vertical"
                  android:background="@drawable/spoiler" android:orientation="vertical" android:padding="10dp"
                  android:scrollbars="none" android:showDividers="none"
                  android:overScrollMode="never"
            >
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:id="@+id/content" android:layout_gravity="left|center_vertical"
            android:background="@drawable/spoiler" android:orientation="vertical" android:padding="10dp"
            android:layout_alignLeft="@+id/label" android:layout_below="@+id/label"
            android:scrollbars="none" android:showDividers="none"
            android:overScrollMode="never"
            >
    </LinearLayout>
</RelativeLayout>