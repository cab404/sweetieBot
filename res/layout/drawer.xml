<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="240dp"
        android:layout_height="fill_parent"
        android:background="@color/Comments.Levels.5">

    <ListView
            android:layout_width="fill_parent"
            android:choiceMode="none"
            android:id="@+id/navigation"
            android:layout_gravity="start"
            android:layout_height="match_parent"
            android:dividerHeight="0dp"
            android:layout_above="@+id/buttons"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/buttons">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/settings" android:layout_gravity="left|center_vertical"
                android:src="@android:drawable/ic_menu_preferences" android:layout_margin="5dp"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/about"
                   android:layout_gravity="left|center_vertical" android:src="@android:drawable/ic_menu_info_details"
                   android:layout_margin="5dp"/>
    </LinearLayout>


</RelativeLayout>