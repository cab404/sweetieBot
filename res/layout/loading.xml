<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/Text.Default.White" android:id="@+id/loading">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Что-то загружаем."
            android:id="@+id/title"
            android:textSize="@dimen/Font.Size.Normal" android:textColor="@color/Text.Default.Black"
            android:layout_centerHorizontal="true" android:layout_alignParentTop="true"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/icon" android:layout_alignLeft="@+id/progressBar"
            android:layout_alignBottom="@+id/progressBar" android:layout_alignRight="@+id/progressBar"
            android:layout_below="@+id/title" android:src="@drawable/muffin" android:padding="10dp"/>
    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar" android:layout_centerHorizontal="true" android:layout_below="@+id/title"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Возможно, даже загрузим."
            android:id="@+id/description"
            android:layout_centerHorizontal="true" android:layout_below="@+id/icon"
            android:textIsSelectable="false" android:textSize="@dimen/Font.Size.Small"
            android:textColor="@color/Text.Gray"/>
</RelativeLayout>