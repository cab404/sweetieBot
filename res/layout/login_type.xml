<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вы не добавили ни одного аккаунта!"
            android:id="@+id/textView" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="18dp" android:textColor="@color/Text.Default.White"
            android:textSize="@dimen/Font.Size.Normal"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView" android:layout_centerHorizontal="true" android:layout_marginTop="16dp"
            android:clipToPadding="false" android:clipChildren="false">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Войти"
                android:id="@+id/login" android:textSize="@dimen/Font.Size.Small"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read-only"
                android:id="@+id/readonly" android:textSize="@dimen/Font.Size.Small"/>
    </LinearLayout>
</RelativeLayout>