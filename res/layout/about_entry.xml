<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content"
              android:layout_gravity="center" xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/__root__" android:padding="4dp">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ключ."
              android:id="@+id/key" android:textStyle="bold" android:textSize="@dimen/Font.Size.Normal"/>
    <include android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             layout="@layout/text" android:id="@+id/value" android:layout_gravity="center"
             android:layout_marginLeft="8dp"/>
</LinearLayout>